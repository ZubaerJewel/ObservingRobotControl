<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ManualControl">
    <TextView
            android:layout_width="253dp"
            android:layout_height="39dp"
            android:text="[Welcome To Manual Control]"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/textView"
            android:textSize="17sp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="76dp" android:layout_marginStart="76dp"
            app:layout_constraintBottom_toTopOf="@+id/editTextIPmc" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.324" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.13"/>
    <WebView
            android:layout_width="374dp"
            android:layout_height="298dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/mcWebView"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/mcbtnDown"
            android:textSize="20sp"/>

    <EditText
            android:layout_width="372dp"
            android:layout_height="43dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editTextIPmc"
            android:hint="IP Address"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.347" app:layout_constraintVertical_bias="0.125"/>
    <Button
            android:text="LEFT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mcbtnLeft" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            app:layout_constraintEnd_toStartOf="@+id/mcbtnRight"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginTop="72dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextIPmc" android:layout_marginBottom="56dp"
            app:layout_constraintBottom_toTopOf="@+id/mcWebView"
            android:textSize="20sp" app:layout_constraintVertical_bias="0.809"
            app:layout_constraintHorizontal_bias="0.091"/>
    <Button
            android:text="Up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mcbtnUp"
            android:layout_marginBottom="5dp"
            app:layout_constraintBottom_toTopOf="@+id/mcbtnDown" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="161dp" android:layout_marginStart="161dp"
            app:layout_constraintTop_toBottomOf="@+id/mcbtnLoad" android:layout_marginTop="8dp"
            android:textSize="20sp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.258"/>
    <Button
            android:text="Right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mcbtnRight" android:layout_marginEnd="25dp" android:layout_marginRight="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/mcbtnUp" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="72dp" app:layout_constraintTop_toBottomOf="@+id/editTextIPmc"
            android:layout_marginBottom="56dp" app:layout_constraintBottom_toTopOf="@+id/mcWebView"
            android:textSize="20sp" app:layout_constraintHorizontal_bias="0.804"
            app:layout_constraintVertical_bias="0.809"/>
    <Button
            android:text="Down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mcbtnDown"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginBottom="324dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.498"/>
    <Button
            android:text="Loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mcbtnLoad"
            android:textSize="20sp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextIPmc" android:layout_marginTop="32dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.001" app:layout_constraintHorizontal_bias="0.958"/>

</android.support.constraint.ConstraintLayout>